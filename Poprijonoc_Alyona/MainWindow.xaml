<Window x:Class="Poprijonoc_Alyona.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poprijonoc_Alyona"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">

    <Border BorderThickness="2" BorderBrush="Aqua">
        <Grid>
            <StackPanel Grid.Row="0" Background="Gray" Height="auto" Width="auto">
                <Image Width="45" Height="45" HorizontalAlignment="Left" Source="logo.ico" Margin="5"/>
            </StackPanel>
            
            <Frame Grid.Row="1" x:Name="frame" Height="auto" Width="auto" LoadCompleted="frame_LoadCompleted" Navigated="frame_Navigated">
            </Frame>
            <StackPanel Grid.Row="2" Background="Gray" Height="auto" Width="auto">
            </StackPanel>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="12*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>
    </Border>
    
</Window>
